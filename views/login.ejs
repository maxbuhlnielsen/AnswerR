<%- include("partials/header"); -%>
<main class="main container">
  <div class="auth border background">
    <h1 class="auth__title">Log in</h1>
    <form action="/login" method="POST">
      <label for="login__username">Username</label>
      <input type="text" name="username" id="login__username" class="auth__input" placeholder="Username">
      <label for="login__password">Password</label>
      <input type="password" name="password" id="login__password" class="auth__input" placeholder="Password">
      <input type="submit" value="Submit" class="auth__button">
    </form>
    <p class="auth__option">Don't have an account yet? <a href="/signup">Sign up</a></p>
  </div>
</main>
<%- include("partials/footer"); -%>
